#include<iostream>
#include<cstring>
using namespace std;

int main(){
int g;
string test;
cin>>g;

for(int i = 1;i <= g; i++){
    cin>>test[i];
    cout<<i<<endl;

}
for(int k = 1;k <= 4; k++)
    cout<<test[k]<<endl;

}


run:
4
werth
1
2
3
4
